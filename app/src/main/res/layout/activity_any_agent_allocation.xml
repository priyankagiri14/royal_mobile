    <LinearLayout
        android:background="@drawable/layoutborder"
        android:layout_below="@id/searchlinear"
        android:weightSum="2"
        android:id="@+id/mainlinear"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_below="@id/searchuser"
            android:id="@+id/lineartext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="8">

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:id="@+id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/mobilenotext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Mobile No."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Email"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/idtext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ID No."
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="123"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:background="@color/white"
            android:layout_weight="1"
            android:id="@+id/linearphoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:id="@+id/profileimage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/nophoto"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/allocation_btn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainlinear"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/greenontrack"
        android:layout_centerHorizontal="true"
        android:text="Allocate Batches"/>

    <!--  <EditText
          android:layout_width="match_parent"
