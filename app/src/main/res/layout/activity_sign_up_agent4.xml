            android:id="@+id/doctypelinear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_30sdp">
                <Spinner
                    android:id="@+id/doctypespinner"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/doctype_spinner">

                </Spinner>

                <Button
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Upload Photo"
                    android:background="@color/greenontrack"
                    android:id="@+id/uploadbtn"/>
                <info.androidhive.fontawesome.FontTextView
                    android:id="@+id/cancel"
                    android:visibility="invisible"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/fa_times_circle"
                    android:textColor="@color/greenontrack"
                    android:textSize="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    />
            </LinearLayout>
            <Button
                android:layout_weight="1"
                android:id="@+id/addviewbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:background="@drawable/button_layout"
                android:textColor="@color/greenontrack"
                android:layout_margin="@dimen/_18sdp"/>


        </LinearLayout>
    </LinearLayout>
